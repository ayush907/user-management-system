<% include("../layouts/header.ejs") %>

<h1>this, is admin Dashboard</h1>

<a href="/admin/new-user">Add new user</a>
<br><br>
<table style="width: 50%;">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Image</th>
        <th>Verified</th>
        <th>Action</th>
    </tr>

    <% if(users.length > 0){ %>
        <% users.forEach(function(user){ %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.mobile %></td>
                <td><img src="/userImages/<%= user.image %>" alt="<%= user.image %>" width="50" height="50"></td>
                <td>
                    <% if(user.is_verified == 0) {%>
                        <p>not verified</p>
                    <% }else{ %>
                        <p>verified</p>
                    <% } %>
                </td>
                <td>
                    <a href="/admin/edit-user?id=<%= user._id %>">Edit</a>
                    <a href="/admin/delete-user?id=<%= user._id %>">Delete</a>
                </td>
            </tr>
        <% }); %>
    <% }else{  %>
        <tr>
            <td colspan="5">Users Not Found</td>
        </tr>
    <% } %>
</table>
<br>
<a href="/admin/home">Go to Home</a>

<% include("../layouts/footer.ejs") %>